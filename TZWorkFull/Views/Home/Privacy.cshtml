@model List<OutputCalc> 
@{
    ViewData["Title"] = "График платежей";
}
<h1>@ViewData["Title"]</h1>
<table class="table">
  <thead>
    <tr>
      <th class="table-secondary" scope='col' >№</th>
      <th class="table-secondary" scope="col">Дата платежа:</th>
      <th class="table-secondary" scope="col">Сумма платежа:</th>
      <th class="table-secondary" scope="col">Основной долг:</th>
      <th class="table-secondary" scope="col">Проценты:</th>
      <th class="table-secondary" scope="col">Остаток долга:</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var outputCalc in @Model)
{
    <tr>
        <td>
            @outputCalc.Month 
        </td>
                <td>
            @outputCalc.Date
        </td>
        <td>
            @outputCalc.MonthlyPayment руб.
        </td>
        <td>
            @outputCalc.MainPart руб.
        </td>
        <td>
            @outputCalc.PercentagePart руб.
        </td>
        <td>
            @outputCalc.BalanceOwed руб.
        </td>
    </tr>
}
</table>
<table class="table" style="width: 30%">
    <tr>
    <th class="table-secondary" scope='col' >Переплата по кредту:</th>
    <td class="table-secondary" scope='col' > @ViewBag.overpayment руб.</td>
    </tr>
</table>
