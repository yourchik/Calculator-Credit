@model Input 
@{ 
    ViewData["Title"] = "Calculator";
}
<div>
    <div class="text-center">
    <h2>Расчет вашего кредита:</h2>
    </div>
    <form asp-action="Privacy" method="post">       
        <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
        
        <p class="col-lg-3">
            <p class="col-lg-2">
                <label for="FirstName"> Имя:</label><br />
                <input class="form-control" type="text" asp-for="FirstName" placeholder="Юрий">
                <span class="text-danger" asp-validation-for="FirstName"></span>                 
            </p>
            <p class="col-lg-2">
                <label for="SecondName"> Фамилия:</label><br />
                <input class="form-control" type="text" asp-for="SecondName" placeholder="Федотов">
                <span class="text-danger" asp-validation-for="SecondName"></span>
            </p>
            <p class="col-lg-2">
                <label for="Number"> Номер телефона:</label><br />
                <input class="form-control" type="number" asp-for="Number" placeholder="(912) 345-67-89" >
                <span class="text-danger" asp-validation-for="Number"></span> 
            </p>
        </p> 

        <p class="col-lg-3">
            <p class="col-lg-2">
                <label for="CreditSum"> Сумма кредита (руб.):</label><br />
                <input class="form-control" type="number" asp-for="CreditSum" min="1" step = "1" placeholder="100 000">
                <span class="text-danger" asp-validation-for="CreditSum"></span>        
            </p>
            <p class="col-lg-2">
                <label for="CreditMonth"> Срок кредита (мес.):</label><br />
                <input class="form-control" type="number" asp-for="CreditMonth" min="1" step = "1" placeholder="12">
                <span class="text-danger" asp-validation-for="CreditMonth"></span> 
            </p >
            <p class="col-lg-2">
                <label for="InterestRate"> Процентная ставка (%):</label><br />
                <input class="form-control" type="number" asp-for="InterestRate" placeholder="9,5" min="0.1" step = "0.1">
                <span class="text-danger" asp-validation-for="InterestRate"></span> 
            </p>
        </p>

        <div class="text-center">
        <p>
            <input class="btn btn-success" type="submit" value="Рассчитать"> 
            <input class="btn btn-danger" type="reset" value="Очистить поля" />
        </p>
        </div>
        </div>
    </form>
</div>
@section Scripts
{
    @{ <partial name = "_ValidationScriptsPartial"/>}
}
